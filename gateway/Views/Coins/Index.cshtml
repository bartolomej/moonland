@model IEnumerable<gateway.Models.Coin>

@{
    ViewData["Title"] = "Index";
}

<h1>Coins</h1>

<table class="table">
    <thead>
        <tr>
            <th style="width: 250px;">Coin</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <img src="@item.logo" alt="@item.name logo" style="width: 30px; height: 30px; margin: 5px;">
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                <p style="color:grey;  margin: 5px; ">@item.symbol</p>
            </td>
            <td>
                <form asp-action="CreateBookmark" asp-route-id="@item.id" >
                    <input type="submit" value="Bookmark" class="btn btn-danger" style="width: 80px; height: 20px; text-align: center; color: white; background: #23b7e5; font-size: 13px; border-color: #23b7e5; border-radius:2px; padding: 0px; float: right; margin: 10px;" />
                </form>
            </td>
        </tr>
}
    </tbody>
</table>
